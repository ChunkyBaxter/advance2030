<div class="threeColumns-1">
  <h1>Login</h1>
  <% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <div class="form-node">
      <%= f.label :login %>
      <%= f.text_field :login, :class => "text", :tabindex => 1 %>
    </div>
    <div class="form-node">
      <%= f.label :password %>
      <%= f.password_field :password, :class => "text", :tabindex => 2 %>
    </div>
  </fieldset>		
  <div class="formAction ">
    <%= f.submit "Log In" %>
  </div>
  <% end %>
</div>

