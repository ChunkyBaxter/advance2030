<fieldset>
	<legend><span><strong>New Account</strong></span></legend>
	<div class="form-node">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
	</div>
	
	<div class="form-node">
    <%= form.label :last_name %>
	  <%= form.text_field :last_name %>
	</div>
	
	<div class="form-node">
    <%= form.label :email_address %>
	  <%= form.text_field :email_address %>
	</div>
	
	<div class="form-node">
    <%= form.label :login %>
  	<%= form.text_field :login %>
	</div>
	
	<div class="form-node">
    <%= form.label :password %>
	  <%= form.password_field :password %>
	</div>
	
	<div class="form-node">
    <%= form.label :password_confirmation, 'Verify password' %>
  	<%= form.password_field :password_confirmation %>
	</div>
</fieldset>
